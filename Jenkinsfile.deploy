pipeline {
    agent {
        label 'docker'
    }
    
    parameters {
        string(name: 'BACKEND_TAG', defaultValue: 'latest', description: 'Backend image tag (e.g. v0.0.1)')
        string(name: 'FRONTEND_TAG', defaultValue: 'latest', description: 'Frontend image tag (e.g. v0.0.1)')
        password(name: 'POSTGRES_PASSWORD', defaultValue: '', description: 'PostgreSQL password')
    }
    
    environment {
        REGISTRY = 'ghcr.io/bwoogmy'
        POSTGRES_USER = credentials('postgres-user')
        POSTGRES_PASSWORD = credentials('postgres-password')
        POSTGRES_DB = credentials('postgres-db')
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh """
                        terraform plan \
                            -var="backend_image=${REGISTRY}/devops-backend:${params.BACKEND_TAG}" \
                            -var="frontend_image=${REGISTRY}/devops-frontend:${params.FRONTEND_TAG}" \
                            -var="postgres_user=${POSTGRES_USER}" \
                            -var="postgres_password=${POSTGRES_PASSWORD}" \
                            -var="postgres_db=${POSTGRES_DB}" \
                            -out=tfplan
                    """
                }
            }
        }
        
        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
    
    post {
        success {
            echo "Deploy completed! Backend: ${params.BACKEND_TAG}, Frontend: ${params.FRONTEND_TAG}"
        }
        failure {
            echo 'Deploy failed!'
        }
    }
}
